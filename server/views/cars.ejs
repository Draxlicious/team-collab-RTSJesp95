<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="/css/cars.css">
	<title><%= title%></title>
</head>

<body>
	<header class="header">
		<h1>The Carzone</h1>
	</header>

	<main class="main">
		<nav>
			<ul class="menuBar">
				<li class="<%= (typeof page == 'undefined' ? 'active' : '') %>">
					<p><a class="nav-link" href="/cars">All</a></p>
				</li>
				<% brands.forEach(brand => { %>
				<li class="<%= (typeof page != 'undefined' && page == brand.brand_id ? 'active' : '') %>">
					<p><a class="nav-link" href="/cars/<%- brand.brand_id %>"><%- brand.brand_title %></a></p>
				</li>
				<% }); %>
			</ul>
		</nav>
		<div class="cars">
			<% cars.forEach(car => { %>
			<div class="car">
				<div class="car__image">
					<img src="/img/<%- car.cars_image %>">
				</div>
				<div class="car__wrapper">
					<div class="car__details">
						<h2><%- car.cars_title %></h2>
						<span><%- car.cars_price %> Kr</span>
					</div>
					<div class="car__more-details">
						<span>
							<h3>Topspeed:</h3><%- car.cars_topspeed %> km/t
						</span>
						<span>
							<h3>Year:</h3><%- car.cars_year %>
						</span>
						<span>
							<h3>Weight:</h3> <%- car.cars_weight_kg %> Kg
						</span>
					</div>
					<div class="car__description">
						<p><%- car.cars_description %></p>
					</div>
				</div>
			</div>
			<% }); %>
		</div>
	</main>

	<button class="back"><a href="/"><i class="far fa-arrow-alt-circle-left">Home</i></a></button>
	<script src="https://kit.fontawesome.com/7c822157fa.js"></script>

</body>

</html>